<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<!-- tiles를 생성하는 설정 -->
<tiles-definitions>
	<definition name="main.tiles" template="/WEB-INF/views/layout/layouts-tiles.jsp">
		<put-attribute name="nav" value="/WEB-INF/views/common/nav.jsp"/>
		<put-attribute name="sidebar" value="/WEB-INF/views/common/sidebar.jsp"/>
		<put-attribute name="main" value="/WEB-INF/views/main/main.jsp"/>
	</definition>
	
	<!-- Traveler Manager -->
	<definition name="travelerManager.tiles" extends="main.tiles">
		<put-attribute name="main" value="/WEB-INF/views/traveler/index.jsp"/>
	</definition>
	<definition name="travelerDetail.tiles" extends="main.tiles">
		<put-attribute name="main" value="/WEB-INF/views/traveler/detail.jsp"/>
	</definition>

	<!-- Planer Manager -->
	<definition name="planerManager.tiles" extends="main.tiles">
		<put-attribute name="main" value="/WEB-INF/views/planer/index.jsp"/>
	</definition>
	<definition name="planerDetail.tiles" extends="main.tiles">
		<put-attribute name="main" value="/WEB-INF/views/planer/detail.jsp"/>
	</definition>
</tiles-definitions>